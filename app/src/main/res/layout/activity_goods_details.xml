<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/color_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rl_goods_details_top">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/imv_goods_details_back"
            android:src="@drawable/back_"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <ImageView

            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/imv_goods_details_share"
            android:src="@drawable/share"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:text="商品详情"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_goods_details_bottom">

        <TextView
            android:text="领券购买"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_goods_details_toTaobao"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingRight="4sp"
            android:paddingLeft="4sp"
            android:background="@color/color_lingquan"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:id="@+id/tv_goods_details_toQuan"
            android:layout_toLeftOf="@+id/tv_goods_details_toTaobao"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="#f79409"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:text="优惠券"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="10sp"
                    android:paddingLeft="10sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_marginTop="3sp"
                    android:textSize="16sp"
                    android:text="0元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_goods_details_roll"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:paddingRight="10sp"
                    android:paddingLeft="10sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </RelativeLayout>



        <LinearLayout
            android:id="@+id/ll_temp_collect"
            android:orientation="vertical"
            android:layout_width="36sp"
            android:layout_height="match_parent"

            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6sp"
            android:layout_toLeftOf="@+id/tv_goods_details_toQuan"
            android:layout_toStartOf="@+id/tv_goods_details_toQuan"
            android:weightSum="4">

            <ImageView
                android:padding="6dp"
                android:id="@+id/tv_goods_details_collect"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/collect_off"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/tv_goods_details_collect_text"
                android:textSize="10dp"
                android:gravity="center"
                android:text="收藏"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginRight="6sp"
            android:layout_toLeftOf="@+id/ll_temp_collect"
            android:background="@color/color_grey"
            android:layout_width="0.5px"
            android:layout_height="match_parent"/>

        <TextView

            android:text="券后价:"
            android:textColor="@color/darkgray"
            android:id="@+id/tv_goods_details_quanhoujia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="21dp"
            android:layout_marginTop="14dp"/>
        <TextView
            android:text="¥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_goods_details_quanhoujia"
            android:layout_toEndOf="@+id/tv_goods_details_quanhoujia"
            android:id="@+id/tv_goods_details_quan"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="22dp"
            android:layout_alignBottom="@+id/tv_goods_details_quanhoujia"/>


