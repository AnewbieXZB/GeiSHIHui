            <!--<View-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_alignRight="@id/tv_goods_details_price"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:background="@color/darkgray" />-->

        <!--</RelativeLayout>-->

    </RelativeLayout>

    <View
        android:background="@color/color_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignTop="@+id/rl_goods_details_bottom"/>
    <ScrollView
        android:id="@+id/sc_goods_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_goods_details_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/rl_goods_details_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imv_goods_details_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pictures_err"
                android:scaleType="fitXY"/>


                <RelativeLayout
                    android:layout_marginTop="2sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:id="@+id/imv_goods_details_platform"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/pictures_err"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2sp"/>

                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_goods_details_title"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_toRightOf="@+id/imv_goods_details_platform"
                        android:layout_alignParentBottom="true"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"/>
                </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/tv_goods_details_dianpuming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券："
                    android:layout_alignParentBottom="true"
                    android:textColor="#a3a3a3"/>
                <TextView

                    android:id="@+id/tv_goods_details_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_lingquan"
                    android:layout_toRightOf="@+id/tv_goods_details_dianpuming"/>



            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/tv_goods_details_liebie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原价："
                    android:textColor="#a3a3a3"/>

                <RelativeLayout
                    android:layout_toRightOf="@+id/tv_goods_details_liebie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_goods_details_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a3a3a3" />
                    <View
                        android:layout_alignLeft="@+id/tv_goods_details_category"
                        android:layout_alignRight="@+id/tv_goods_details_category"
                        android:layout_centerVertical="true"
                        android:background="#a3a3a3"
                        android:layout_width="match_parent"
                        android:layout_height="3px"/>
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp">

                <TextView

                    android:id="@+id/tv_goods_details_kucun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销售量："
                    android:textColor="#a3a3a3"/>
                <TextView

                    android:id="@+id/tv_goods_details_surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ecabab"
                    android:layout_toRightOf="@+id/tv_goods_details_kucun"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:text="您可能会喜欢"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_goods_details_tuijian"
                    android:textSize="16dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/color_lingquan" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_toRightOf="@+id/tv_goods_details_tuijian"
                    android:layout_centerVertical="true"
                    android:background="@color/color_lingquan" />

            </RelativeLayout>

            <com.example.s.why_no.view.BanRecylerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_goods_details_more">

            </com.example.s.why_no.view.BanRecylerView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
