<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <!--android:layout_marginLeft="8dp"-->
    <!--android:layout_marginTop="8dp"-->
    <!--android:layout_marginBottom="8dp"-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pictures_err"
        android:id="@+id/imv_item_pic"
        android:scaleType="fitStart" />

    <TextView
        android:text="小编推荐"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_today_new"
        android:gravity="center"
        android:textSize="9dp"
        android:padding="1dp"
        android:background="#7ad3c1"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/ll_item_quan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imv_item_pic"
        android:layout_alignEnd="@+id/imv_item_pic"
        android:background="#f0215b" >

        <TextView
            android:text="独家券"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:gravity="center"
            android:textColor="#EDFF00"
            />
        <TextView
            android:text="xx元"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_item_quan"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/white"/>
    </LinearLayout>


    <TextView

        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_title"
        android:textColor="#777777"
        android:layout_below="@+id/imv_item_pic"
        android:layout_alignLeft="@+id/imv_item_pic"
        android:layout_alignStart="@+id/imv_item_pic"
        android:layout_alignRight="@+id/ll_item_quan"
        android:layout_alignEnd="@+id/ll_item_quan"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:layout_centerHorizontal="true" />

    <LinearLayout

        android:id="@+id/ll_temp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_title"
        android:layout_alignLeft="@+id/tv_item_title"
        android:layout_alignStart="@+id/tv_item_title"
        android:layout_marginTop="2dp"
        >

    <TextView
        android:layout_gravity="center_vertical"
        android:text="券后"
        android:textSize="12dp"
        android:textColor="#a3a3a3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_jiage" />

    <TextView
        android:layout_marginLeft="2dp"
        android:text="¥"
        android:textColor="#ff4b5f"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_price" />
    </LinearLayout>
