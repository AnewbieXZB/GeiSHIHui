    <LinearLayout


        android:id="@+id/ll_default"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_title"
        android:layout_alignRight="@+id/tv_item_title"
        android:layout_alignEnd="@+id/tv_item_title"
        android:layout_alignBottom="@+id/ll_temp"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_gravity="center"
            android:text="销售量"
            android:textSize="10dp"
            android:textColor="#B5B5B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_temp"
            android:layout_toLeftOf="@+id/tv_item_volume"
            android:layout_toStartOf="@+id/tv_item_volume"
            android:id="@+id/tv_item_xiaoliang"
            android:layout_marginRight="1dp"/>
    <TextView
        android:layout_gravity="center"
        android:text="0"
        android:textColor="#ecabab"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ll_temp"
        android:layout_alignRight="@+id/imv_item_pic"
        android:layout_alignEnd="@+id/imv_item_pic"
        android:id="@+id/tv_item_volume" />



