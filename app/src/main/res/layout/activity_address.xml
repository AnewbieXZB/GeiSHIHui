            <!--android:layout_marginTop="5dp"/>-->

        <TextView
            android:text="收货地址"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <TextView
            android:text="收货人姓名"
            android:textSize="16sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:textColor="#a3a3a3"/>

        <EditText
            android:gravity="center_vertical"
            android:id="@+id/edt_address_name"
            android:inputType="textPersonName"
            android:textSize="16dp"
            android:layout_marginLeft="6sp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:singleLine="true"
            android:background="@drawable/into_etbg" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#EEE5DE"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:text="手机号码"
            android:textSize="16sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:textColor="#a3a3a3"/>

        <EditText

            android:id="@+id/edt_address_tel"
            android:inputType="phone"
            android:textSize="16sp"
            android:layout_marginLeft="6sp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:singleLine="true"
            android:background="@drawable/into_etbg" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#EEE5DE"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <TextView
            android:text="所在省市区"
            android:textSize="16sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:textColor="#a3a3a3"/>

        <EditText
            android:id="@+id/edt_address_city"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:layout_marginLeft="6sp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:singleLine="true"
            android:background="@drawable/into_etbg" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#EEE5DE"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <TextView
            android:text="详细地址"
            android:textSize="16sp"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:textColor="#a3a3a3"/>

        <EditText
            android:id="@+id/edt_address_more"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:layout_marginLeft="6sp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:singleLine="true"
            android:background="@drawable/into_etbg" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#EEE5DE"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/bt_save_address_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/btn_accent"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
