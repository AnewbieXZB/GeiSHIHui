<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/color_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/imv_opinion_back"
            android:src="@drawable/back_"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:text="意见反馈"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18dp"/>
    </RelativeLayout>

    <TextView
        android:text="请选择意见类型："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/darkslategrey"
        android:layout_marginTop="15dp"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_opinion_type01"
                android:text="功能建议"
                android:textSize="13dp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp">

        <TextView
            android:id="@+id/tv_opinion_type02"
            android:text="购买问题"
            android:textSize="13dp"
            android:textColor="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp">

        <TextView
            android:id="@+id/tv_opinion_type03"
            android:text="性能问题"
            android:textSize="13dp"
            android:textColor="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="6dp">

        <TextView
            android:id="@+id/tv_opinion_type04"
            android:text="其他问题"
            android:textSize="13dp"
            android:textColor="#777777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"/>
    </RelativeLayout>
    </LinearLayout>


    <TextView
        android:text="请填写意见内容："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/darkslategrey"
        android:layout_marginTop="15dp"
        android:textSize="13dp"
        />

    <EditText
        android:id="@+id/edt_opinion_test"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:ems="10"
        android:padding="4dp"
        android:textSize="13dp"
        android:hint="请输入你你要反馈的内容"
        android:gravity="top|left"
        android:background="#ffffff"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/bt_opinion_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/btn_accent"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
