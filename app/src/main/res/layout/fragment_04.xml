<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">

        <TextView
            android:text="我的收藏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorLogo" />

        <!--<ImageView-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:id="@+id/imv_fragment_04_delete"-->
            <!--android:src="@drawable/ic_launcher"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:layout_marginBottom="5dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_alignParentRight="true"/>-->

        <TextView
            android:textSize="14sp"
            android:textColor="@color/color_grey"
            android:text="编辑"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:id="@+id/tv_fragment_04_delete"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8px"
            android:layout_alignParentBottom="true"
            android:background="#EEE5DE"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_fragment_04_select_delete"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <RelativeLayout
            android:layout_marginLeft="10sp"
            android:id="@+id/rl_temp"
            android:layout_width="20sp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:gravity="center"
                android:src="@drawable/check_box_bg_default6"
                android:layout_centerInParent="true"
                android:id="@+id/cb_fragment_04_all_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--android:button="@drawable/check_box_bg"-->
            <!--android:scaleX="0.3"-->
            <!--android:scaleY="0.3"-->
        </RelativeLayout>
        <TextView
            android:text=" 全选"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rl_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/rb_fragment_04_sure_delete"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#ff3933"
            android:text="删除"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_04_collect_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
